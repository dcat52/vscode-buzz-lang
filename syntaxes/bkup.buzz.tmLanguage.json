{
    "name": "buzz",
    "scopeName": "source.buzz",
    "fileTypes": ["bzz"],
    "patterns": [
        {
            "name": "punctuation.definition.comment.buzz",
            "match": "#.*$"
        },
        {
            "name": "punctuation.section.block.buzz",
            "begin": "{",
            "end": "}"
        },
        {
            "name": "punctuation.section.block.buzz",
            "begin": "[",
            "end": "]"
        },
        {
            "name": "punctuation.section.block.buzz",
            "begin": "(",
            "end": ")"
        },
        {
            "name": "keyword.operator.arithmetic.buzz",
            "match": "\\+|\\-|\\*|\\/|\\^|%|>|<|="
        },
        {
            "name": "variable.other.buzz",
            "match": "_"
        },
        {
            "name": "constant.language.buzz",
            "match": "\\b(swarm|stigmergy|neighbors|self|id|math|io|string)\\b"
        },
        {
            "name": "keyword.control.buzz",
            "match": "\\b(var|nil|if|else|function|return|for|while|and|or|not|size|foreach|map|reduce|include)\\b"
        },
        {
            "name": "support.function.buzz",
            "match": "\\b([[:alpha:]_][[:alnum:]_]*)\\s-*(\\b"
        },
        {
            "name": "constant.numeric.buzz",
            "match": "\\b([[:upper:]][[:upper:[:digit:]_]*)\\b"
        },
        {
            "name": "variable.other.buzz",
            "match": "\\b([[:alpha:]_][[:alnum:]_]*)\\b"
        }
    ],
    "repository": {
        "increaseIndentPattern": {
            "name": "meta.increaseIndentPattern.buzz",
            "match": "\\(\\s-*\\(then\\|else\\|do\\|repeat\\|function\\)\\s-*\\)"
        },
        "decreaseIndentPattern": {
            "name": "meta.decreaseIndentPattern.buzz",
            "match": "\\(\\s-*\\(end\\|until\\)\\s-*\\)"
        }
    }
}