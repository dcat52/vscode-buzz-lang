{
    "name": "buzz",
    "scopeName": "source.buzz",
    "fileTypes": ["bzz"],
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#string"
        },
        {
            "include": "#built"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#logical"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#variable"
        },
        {
            "include": "#class"
        },
        {
            "include": "#function"
        },
        {
            "include": "#nil"
        }
    ],
    "repository": {

        "comments": {
            "patterns": [
                {
                    "name": "comment",
                    "begin": "#",
                    "end": "$\\n?"
                }
            ]
        },
        "string": {
            "patterns": [
                {
                    "name": "string.quoted.double",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "include": "#string_escape"
                        }
                    ]
                },
                {
                    "name": "string.quoted.single",
                    "begin": "'",
                    "end": "'",
                    "patterns": [
                        {
                            "include": "#string_escape"
                        }
                    ]
                }
            ]
        },
        "string_escape": {
            "patterns": [
                {
                    "name": "constant.character.escape",
                    "match": "\\\\."
                }
            ]
        },
        "nil": {
            "patterns": [
                {
                    "name": "constant.language.nil",
                    "match": "nil"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.arithmetic",
                    "match": "\\+|\\-|\\*|\\/|\\^|%|>|<|="
                }
            ]
        },
        "logical": {
            "patterns": [
                {
                    "name": "keyword.operator.logical",
                    "match": "!="
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.if",
                    "match": "\\b(if|else)\\b"
                },
                {
                    "name": "keyword.control.loops",
                    "match": "\\b(while|for)\\b"
                },
                {
                    "name": "keyword.control.return",
                    "match": "\\b(return)\\b"
                }
            ]
        },
        "variable": {
            "patterns": [
                {
                    "name": "variable.constant",
                    "match": "\\b(self|id)\\b"
                },
                {
                    "name": "keyword.variable",
                    "match": "var"
                }
            ]
        },
        "class": {
            "patterns": [
                {
                    "name": "support.class.builtin",
                    "match": "\\b(swarm|stigmergy|neighbors|math|io|string)\\b"
                }
            ]
        },
        "function": {
            "patterns": [
                {
                    "name": "meta.function.declaration",
                    "begin": "function",
                    "end": "$\\n?",
                    "patterns": [
                        {
                            "name": "keyword.control.function",
                            "match": "$\\n?"
                        },
                        {
                            "name": "entity.name.function.python",
                            "match": "\\b(\\w+)"
                        }
                    ]
                }

            ]
        }
    }
}